<h1>Create a cool ass post!</h1>
<h2> {{userId}} </h2>
<div class="row">
  <div class="col-md-6">
    <form action="/post/create/{{user._id}}" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="picName">Title:</label>
        <input type="text" name="picName" id="picName" class="form-control" />
      </div>
 
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea name="content" id="content" cols="50" rows="4" class="form-control"> </textarea>
      </div>
 
      <div class="form-group">
        <label for="picPath">Image:</label>
        <input type="file" name="picPath" id="picPath" class="form-control-file">
      </div>
      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
      <button type="submit" class="btn btn-primary">Post!</button>
    </form>
  </div>
</div>